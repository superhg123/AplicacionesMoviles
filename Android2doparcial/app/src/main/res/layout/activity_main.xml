<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="20dp">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.android2doparcial.Ingreso"
        tools:layout="@layout/fragment_ingreso"
        android:id="@+id/ingresoLayout"
        android:layout_marginBottom="20dp"/>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.example.android2doparcial.Desplegado"
        tools:layout="@layout/fragment_desplegado"
        android:id="@+id/desplegadoLayout" />



</LinearLayout>